<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="106dp"
        android:layout_height="120dp">

        <!-- 프로필 이미지 -->
        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:contentDescription="@string/desc_iv_profile"
            app:srcCompat="@drawable/park" />

        <!-- 찜하기 버튼 -->
        <com.like.LikeButton
            android:id="@+id/btn_bottom_recycler_pick"
            app:icon_type="heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            app:icon_size="20dp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_profile"
        android:orientation="vertical">

        <!-- 이름/나이/주소 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- 이름 -->
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="이지은" />

            <!-- 나이 -->
            <TextView
                android:id="@+id/tv_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="25세" />

            <!-- 주소 -->
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="서울시 은평구 불광동" />

        </LinearLayout>

        <!-- 월세 -->
        <TextView
            android:id="@+id/tv_monthMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="500,000원" />

        <!-- 선 -->
        <View
            android:layout_width="18dp"
            android:layout_height="1dp"
            android:background="@color/colorAccent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자기소개" />

        <!-- 자기소개 -->
        <TextView
            android:id="@+id/tv_selfIntroduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="안녕하세요 반갑습니다" />

        <!--실제 데이터 받아오는 예제-->
        <TextView
            android:id="@+id/info_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <!-- 좋아요 아이콘 -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_like_icon" />

            <!-- 좋아요 -->
            <TextView
                android:id="@+id/tv_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="요리" />

            <!-- 싫어요 아이콘 -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_dislike_icon" />

            <!-- 싫어요 -->
            <TextView
                android:id="@+id/tv_disike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="반려견" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>